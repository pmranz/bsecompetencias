<!DOCTYPE html>
<html>
<head>
  <title>Sistema de Desarrollo Humano - Evaluación por Competencias</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="cabecera">
    <span id="cab_izq">
      <img src="/images/logo_sdh.png">
    </span>
    <span id="cab_der">
      <% if user_signed_in? %>
        <%= current_user.email %> | <%= link_to 'Salir', destroy_user_session_path if user_signed_in? %>
      <% else %>
        <%= link_to('Entrar', new_user_session_path)  %>
      <% end %>
    </span>
  </div>
  <hr>
  
  <div id="cuerpo">
    <div id="menu_adm">
      <% if user_signed_in? %>
        Administración: <%= link_to_unless_current 'Niveles', levels_path %> | <%= link_to_unless_current 'Tipos de Competencia', skill_types_path %> | <%= link_to_unless_current 'Competencias', skills_path %> | 
        <%= link_to_unless_current 'Divisiones', divisions_path %> | <%= link_to_unless_current 'Departamentos', departments_path %> | <%= link_to_unless_current 'Funcionarios', workers_path %> |
        <%= link_to_unless_current 'Cargos', job_titles_path %> | <%= link_to_unless_current 'Cargos', positions_path %>
      <% end %>
    </div>

  <!--
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  -->

<%= yield %>

  </div>
  <hr>
  <div id="pie">
    <span id="pie_izq"><a href="#">Mapa del sitio</a> | <a href="#">Contacto</a></span><span id="pie_der"><span id="divsis">División Sistemas</span><img src="/images/BSE.jpg"></span>
  </div>
</body>
</html>
