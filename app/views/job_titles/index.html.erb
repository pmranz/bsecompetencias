<h1>Listing job_titles</h1>

<% form_tag '', :method => :get do %>
  <%= text_field_tag :filter_value %>
  <%= submit_tag 'Refresh' %>
<% end %>

<table class="tab_listados" id="tab_job_titles">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @job_titles.each do |job_title| %>
  <tr>
    <td><%= job_title.name %></td>
    <td><%= link_to 'Show', job_title %></td>
    <td><%= link_to 'Edit', edit_job_title_path(job_title) %></td>
    <td><%= link_to 'Destroy', job_title, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>    
<% end %>
</table>
<%= will_paginate @job_titles %> 

<br />

<%= link_to 'New Job title', new_job_title_path %>

