<%= form_for(@skill) do |f| %>


  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% @skill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :skill_type_id %><br />
    <%= f.collection_select(:skill_type_id, SkillType.find(:all), :id, :name, {:prompt => 'Selecciona un Tipo de Competencia' }) %>
  </div>
  
  <br/>

  <div class="actions">
    <%= f.submit %>
  </div>

  <h2>Behaviors</h2>
  
<%= link_to 'New Behavior', new_behavior_path, :skill_id => @skill.id %>

  <%= render :partial => 'behaviors/behaviors_list',:locals => {:behaviors => @skill.behaviors, :skill_id => @skill.id } %>

<% end %>
